<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.micer.backend.dao.BuildingEntityDao">
    <select id="getEntityInfo" resultType="BuildingEntity">
        select `id`, `uuid`, `name`, `desc`, `order` from ${table} where uuid = #{uuid}
    </select>
    <select id="getMasterUuid" resultType="String">
        select master_uuid from ${table} where slave_uuid = #{uuid}
    </select>
    <select id="getSlavesUuid" resultType="String">
        select slave_uuid from ${table} where master_uuid = #{uuid}
    </select>
    <select id="getMasterEntityInfo" resultType="BuildingEntity">
        select M.*
        from (select `master_uuid` from ${relation_table} where `slave_uuid` = #{slave_uuid}) as R
          join ${master_table} as M on R.master_uuid = M.uuid
    </select>
</mapper>
